# JSON-RPC endpoint for Ethereum (or local hardhat)
RPC_URL=http://localhost:8545

# Contract address of deployed TokenLockForAMA on the chain we listen to
CONTRACT_ADDRESS=0xYourContractAddressHere

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/ama_bridge

# Optional starting block for initial sync (0 to scan from genesis)
FROM_BLOCK=0

# Optional: number of past blocks to query at a time for batching
BATCH_SIZE=5000
